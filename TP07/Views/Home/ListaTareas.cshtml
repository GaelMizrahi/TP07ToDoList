@using TP07.Models
@{
    ViewData["Title"] = "ListaTareas";
    List<Tarea> lista = ViewBag.ListaTareas as List<Tarea>;
}

<div class="container">
  <h2 class="page-title">Mis tareas</h2>

<ul>
@if (lista != null)
{
    foreach (Tarea t in lista)
    {
        <li>
            <div>Título: @t.titulo</div>
            <div>Descripción: @t.descripcion</div>
            <div>Fecha: @t.fecha.ToString("yyyy-MM-dd")</div>
            <div>Finalizada: @(t.finalizada ? "Sí" : "No")</div>

            <a href='@Url.Action("FinalizarTarea", "Home", new { id = t.ID })'>Finalizar</a> 
            <a href='@Url.Action("EditarTarea", "Home", new { id = t.ID })'>Editar</a> 
            <a href='@Url.Action("EliminarTarea", "Home", new { id = t.ID })'>Eliminar</a>
        </li>
    }
}
</ul>

<section class="crearTareas"> 
 <a class="btn btn-primary" href='@Url.Action("CrearTareaGuardar","Home")'>Nueva tarea</a>
</section>